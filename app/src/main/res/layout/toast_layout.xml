<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/toast_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView

            android:gravity="center"
            android:id="@+id/toast_mood"
            android:background="@color/dark_gray"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/margin_bottom_toast"
            android:layout_marginLeft="@dimen/margin_left_toast"
            android:layout_marginRight="@dimen/margin_right_toast"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_toast"/>

</RelativeLayout>